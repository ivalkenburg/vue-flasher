{
  "name": "vue-notification-renderless",
  "version": "0.5.0",
  "description": "Lightweight renderless flash message component.",
  "private": false,
  "main": "dist/vue-notification-renderless.umd.js",
  "module": "dist/my-component.esm.js",
  "unpkg": "dist/vue-notification-renderless.min.js",
  "scripts": {
    "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
    "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/vue-notification-renderless.umd.js",
    "build:es": "rollup --config build/rollup.config.js --format es --file dist/vue-notification-renderless.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/vue-notification-renderless.min.js"
  },
  "dependencies": {
    "vue": "^2.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "mdn-polyfills": "^5.15.1",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-vue": "^4.7.1",
    "vue-template-compiler": "^2.6.6"
  },
  "keywords": [
    "vue",
    "flash",
    "notifications",
    "toast",
    "renderless"
  ],
  "files": [
    "dist/*.map",
    "dist/*.js",
    "src/*"
  ],
  "license": "MIT",
  "homepage": "https://github.com/mpowell-atomic/vue-notification-renderless",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpowell-atomic/vue-notification-renderless.git"
  },
  "author": "Mark Powell <mpowell@atomicsoftware.com>",
  "bugs": {
    "url": "https://github.com/mpowell-atomic/vue-notification-renderless/issues"
  }
}
